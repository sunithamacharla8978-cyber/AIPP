class Stack:
    """A simple Last-In, First-Out (LIFO) stack implementation."""

    def __init__(self):
        """Initializes an empty stack."""
        self._items = []

    def is_empty(self):
        """Returns True if the stack is empty, False otherwise."""
        return len(self._items) == 0

    def push(self, item):
        """Adds an item to the top of the stack."""
        self._items.append(item)

    def pop(self):
        """Removes and returns the item from the top of the stack.
        Raises an IndexError if the stack is empty.
        """
        if self.is_empty():
            raise IndexError("pop from empty stack")
        return self._items.pop()

    def peek(self):
        """Returns the item at the top of the stack without removing it.
        Raises an IndexError if the stack is empty.
        """
        if self.is_empty():
            raise IndexError("peek from empty stack")
        return self._items[-1]

    def size(self):
        """Returns the number of items in the stack."""
        return len(self._items)

    def __str__(self):
        """Returns a string representation of the stack."""
        return f"Stack: {self._items}"


# --- Example Usage ---
print("--- Stack Operations ---")
my_stack = Stack()
print(f"Is stack empty initially? {my_stack.is_empty()}")
print(f"Stack size: {my_stack.size()}")

print("\nPushing items: 10, 20, 30")
my_stack.push(10)
my_stack.push(20)
my_stack.push(30)
print(my_stack)
print(f"Is stack empty now? {my_stack.is_empty()}")
print(f"Stack size: {my_stack.size()}")

print(f"\nTop item (peek): {my_stack.peek()}")
print(my_stack) # Stack remains unchanged

print(f"\nPopping item: {my_stack.pop()}")
print(my_stack)
print(f"Stack size: {my_stack.size()}")

print(f"Popping item: {my_stack.pop()}")
print(my_stack)
print(f"Stack size: {my_stack.size()}")

print(f"Popping item: {my_stack.pop()}")
print(my_stack)
print(f"Is stack empty after popping all? {my_stack.is_empty()}")
print(f"Stack size: {my_stack.size()}")

print("\nAttempting to pop from an empty stack (will raise IndexError):")
try:
    my_stack.pop()
except IndexError as e:
    print(f"Error: {e}")

print("\nAttempting to peek from an empty stack (will raise IndexError):")
try:
    my_stack.peek()
except IndexError as e:
    print(f"Error: {e}")
