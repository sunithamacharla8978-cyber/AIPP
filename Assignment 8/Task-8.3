import re

def is_sentence_palindrome(sentence):
    """
    Checks if a sentence is a palindrome, ignoring case, spaces, and punctuation.

    Args:
        sentence (str): The input sentence.

    Returns:
        bool: True if the sentence is a palindrome, False otherwise.
    """
    if not isinstance(sentence, str):
        raise TypeError("Input must be a string.")

    # Convert to lowercase, remove spaces and punctuation
    cleaned_sentence = re.sub(r'[^a-z0-9]', '', sentence.lower())

    # Check if the cleaned sentence is a palindrome
    return cleaned_sentence == cleaned_sentence[::-1]

