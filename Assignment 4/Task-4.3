# Example inputs and outputs:
format_name("John Smith")      # Output: "Smith, John"
format_name("Mary Jane Doe")   # Output: "Doe, Mary Jane"
format_name("Robert Jones")    # Output: "Jones, Robert"

def format_name(full_name: str) -> str:
    """
    Format a full name as 'Last, First'
    Args:
        full_name: String containing first and last name
    Returns:
        Formatted name as 'Last, First'
    """
    # Split name into parts
    name_parts = full_name.split()
    
    # Last name is the final part
    last = name_parts[-1]
    
    # First name is everything else
    first = " ".join(name_parts[:-1])
    
    return f"{last}, {first}"
